{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./dist/",

        "noEmit": true,

        /* based on https://github.com/tsconfig/bases/blob/main/bases/node18.json */
        "lib": ["es2023"],
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "skipLibCheck": true,

        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*.ts"]
}
